extends layout/layout.pug

block content
    section
        .inner
          .analysis-container
            form#anal-form(action='', method='post')
              .analysis-input
                h3 제목
                textarea#anal-input-title(name="", cols="100", rows="2", form="anal-form")
                h3 문항
                textarea#anal-req(name="", cols="100", rows="10", form="anal-form")
                h3 답변
                textarea#anal-res(name="", cols="100", rows="20", form="anal-form")
              .analBtn-container
                a#anal-search(href="#") 유사 자소서 조회
                button#anal-my(type="submit") 내 자소서 분석
              .analSaveBtn-container
                a#anal-saveBtn(href="#") 내 자소서 분석